# {{projectName}} Environment Configuration
# Copy this file to .env and fill in your values

# Cloudflare Configuration
CLOUDFLARE_ACCOUNT_ID={{cloudflareAccountId}}
CLOUDFLARE_API_TOKEN=your_cloudflare_api_token_here
{{#if enableCloudflareWorker}}
CLOUDFLARE_WORKER_NAME={{workerName}}
{{/if}}
{{#if customDomain}}
CLOUDFLARE_ZONE_ID=your_cloudflare_zone_id_here
CLOUDFLARE_DOMAIN={{domain}}
{{/if}}

# API Configuration
{{#if useSharedWorker}}
# Shared Worker Configuration
# The shared worker handles API authentication
VITE_API_BASE_URL=https://{{sharedWorkerUrl}}/api/airtable
VITE_PROJECT_KEY={{lowercase projectKey}}
# Note: API credentials are managed in the shared worker
{{else if (eq apiType "airtable")}}
# Airtable Configuration
AIRTABLE_TOKEN=your_airtable_personal_access_token_here
AIRTABLE_BASE_ID=your_airtable_base_id_here
{{#if airtableWebhook}}
AIRTABLE_WEBHOOK_URL=your_airtable_webhook_url_here
{{/if}}
{{/if}}

{{#if (eq apiType "custom")}}
# Custom API Configuration
API_BASE_URL={{apiBaseUrl}}
API_KEY=your_api_key_here
API_SECRET=your_api_secret_here
{{/if}}

{{#if enableDatabase}}
# Database Configuration
{{#if (eq databaseType "d1")}}
D1_DATABASE_ID=your_d1_database_id_here
{{/if}}
{{#if (eq databaseType "postgresql")}}
DATABASE_URL=postgresql://user:password@host:port/database
{{/if}}
{{#if (eq databaseType "mysql")}}
DATABASE_URL=mysql://user:password@host:port/database
{{/if}}
{{/if}}

{{#if enableKVStorage}}
# KV Storage Configuration
KV_NAMESPACE_ID=your_kv_namespace_id_here
KV_NAMESPACE_BINDING={{kvBinding}}
{{/if}}

{{#if enableR2Storage}}
# R2 Storage Configuration
R2_BUCKET_NAME={{r2BucketName}}
R2_ACCESS_KEY_ID=your_r2_access_key_id_here
R2_SECRET_ACCESS_KEY=your_r2_secret_access_key_here
{{/if}}

{{#if enableDurableObjects}}
# Durable Objects Configuration
DURABLE_OBJECT_NAMESPACE={{durableObjectName}}
{{/if}}

{{#if enableWebhooks}}
# Webhook Configuration
WEBHOOK_SECRET=your_webhook_secret_here
{{#each webhookEndpoints}}
WEBHOOK_{{uppercase this.name}}_URL={{this.url}}
{{/each}}
{{/if}}

{{#if enableAuthentication}}
# Authentication Configuration
{{#if (eq authProvider "auth0")}}
AUTH0_DOMAIN=your_auth0_domain_here
AUTH0_CLIENT_ID=your_auth0_client_id_here
AUTH0_CLIENT_SECRET=your_auth0_client_secret_here
AUTH0_CALLBACK_URL={{#if customDomain}}https://{{domain}}/auth/callback{{else}}http://localhost:{{devServerPort}}/auth/callback{{/if}}
{{/if}}
{{#if (eq authProvider "clerk")}}
CLERK_PUBLISHABLE_KEY=your_clerk_publishable_key_here
CLERK_SECRET_KEY=your_clerk_secret_key_here
{{/if}}
{{#if (eq authProvider "supabase")}}
SUPABASE_URL=your_supabase_url_here
SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_KEY=your_supabase_service_key_here
{{/if}}
{{#if (eq authProvider "custom")}}
JWT_SECRET=your_jwt_secret_here
SESSION_SECRET=your_session_secret_here
{{/if}}
{{/if}}

{{#if enableEmailService}}
# Email Service Configuration
{{#if (eq emailProvider "sendgrid")}}
SENDGRID_API_KEY=your_sendgrid_api_key_here
SENDGRID_FROM_EMAIL=noreply@{{domain}}
{{/if}}
{{#if (eq emailProvider "mailgun")}}
MAILGUN_API_KEY=your_mailgun_api_key_here
MAILGUN_DOMAIN={{domain}}
MAILGUN_FROM_EMAIL=noreply@{{domain}}
{{/if}}
{{#if (eq emailProvider "resend")}}
RESEND_API_KEY=your_resend_api_key_here
RESEND_FROM_EMAIL=noreply@{{domain}}
{{/if}}
{{/if}}

{{#if enablePayments}}
# Payment Configuration
{{#if (eq paymentProvider "stripe")}}
STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key_here
STRIPE_SECRET_KEY=your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret_here
{{/if}}
{{#if (eq paymentProvider "paddle")}}
PADDLE_VENDOR_ID=your_paddle_vendor_id_here
PADDLE_API_KEY=your_paddle_api_key_here
PADDLE_PUBLIC_KEY=your_paddle_public_key_here
{{/if}}
{{/if}}

{{#if enableAnalytics}}
# Analytics Configuration
{{#if useGoogleAnalytics}}
GA_MEASUREMENT_ID=your_google_analytics_measurement_id_here
{{/if}}
{{#if usePlausible}}
PLAUSIBLE_DOMAIN={{domain}}
PLAUSIBLE_API_KEY=your_plausible_api_key_here
{{/if}}
{{#if usePostHog}}
POSTHOG_API_KEY=your_posthog_api_key_here
POSTHOG_HOST=https://app.posthog.com
{{/if}}
{{/if}}

{{#if enableMonitoring}}
# Monitoring Configuration
{{#if (eq monitoringProvider "sentry")}}
SENTRY_DSN=your_sentry_dsn_here
SENTRY_ENVIRONMENT={{#if customDomain}}production{{else}}development{{/if}}
{{/if}}
{{#if (eq monitoringProvider "logflare")}}
LOGFLARE_API_KEY=your_logflare_api_key_here
LOGFLARE_SOURCE_ID=your_logflare_source_id_here
{{/if}}
{{/if}}

# CORS Configuration
ALLOWED_ORIGINS={{#if customDomain}}https://{{domain}},https://www.{{domain}}{{else}}http://localhost:{{devServerPort}},http://127.0.0.1:{{devServerPort}}{{/if}}

# Environment
NODE_ENV={{#if customDomain}}production{{else}}development{{/if}}
ENVIRONMENT={{#if customDomain}}production{{else}}development{{/if}}

{{#if enableFeatureFlags}}
# Feature Flags
{{#each featureFlags}}
FEATURE_{{uppercase this.name}}={{this.enabled}}
{{/each}}
{{/if}}

{{#if customEnvVars}}
# Custom Environment Variables
{{#each customEnvVars}}
{{this.key}}={{this.value}}
{{/each}}
{{/if}}

# Development Configuration
VITE_PORT={{devServerPort}}
VITE_PREVIEW_PORT={{previewPort}}
{{#if enableHMR}}
VITE_HMR_PORT=24678
VITE_HMR_HOST=localhost
{{/if}}

# Build Configuration
{{#if sourceMaps}}
GENERATE_SOURCEMAP=true
{{else}}
GENERATE_SOURCEMAP=false
{{/if}}
{{#if analyzeBundle}}
ANALYZE_BUNDLE=true
{{/if}}

# Security Headers (for Cloudflare Workers/Pages)
SECURITY_HEADERS_CSP="default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; font-src 'self' data:; connect-src 'self' {{#if customDomain}}https://{{domain}}{{/if}}"
SECURITY_HEADERS_PERMISSIONS_POLICY="geolocation=(), microphone=(), camera=()"

# Rate Limiting (for Cloudflare Workers)
{{#if enableRateLimiting}}
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_REQUESTS_PER_HOUR=1000
{{/if}}

# Cache Configuration
{{#if enableCache}}
CACHE_TTL_SECONDS=3600
CACHE_STALE_WHILE_REVALIDATE=86400
{{/if}}

# Debug Configuration
DEBUG={{#if debugMode}}true{{else}}false{{/if}}
LOG_LEVEL={{#if customDomain}}info{{else}}debug{{/if}}